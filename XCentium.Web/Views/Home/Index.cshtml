@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>XCENTIUM Test Code</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Test: Extract images and words</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p>
            <input type="text" id="targetUrl" placeholder="Enter the URL" />
            <button class="btn btn-default" onclick="processUrl();">Process</button>
        </p>
    </div>
</div>

<script >

    function processUrl() {

        var targetUrl = $('#targetUrl').val();

        $.ajax({
            type: 'POST',
            //url: '/Home/GetExtractedData',
            url: '@Url.Action("GetExtractedData", "Home")',
            data: { url: targetUrl },
            cache: false,
            success: function (result) {
                alert(result.html);
            }
        });

    }

</script>